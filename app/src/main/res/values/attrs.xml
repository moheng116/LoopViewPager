<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoopPageIndicator">
        <attr name="loop_indicator_selected_color" format="color|reference" />
        <attr name="loop_indicator_normal_color" format="color|reference" />
        <attr name="loop_indicator_width" format="dimension" />
        <attr name="loop_indicator_height" format="dimension" />
        <attr name="loop_indicator_radius" format="dimension" />
        <attr name="loop_indicator_margin" format="dimension" />
        <attr name="loop_indicator_gravity" format="enum">
            <enum name="center" value="0" /><!--中心-->
            <enum name="start" value="1" /><!--左边位置-->
            <enum name="end" value="2" /><!--结尾位置-->
        </attr>
        <attr name="loop_indicator_type" format="enum">
            <enum name="circle" value="0" /><!--圆形-->
            <enum name="rectangle" value="1" /><!--矩形-->
        </attr>
    </declare-styleable>
</resources>